#include<iostream>
using namespace std;

int main()
{
int time;
int hour;
int minute;
int second;
int remainder;

cout<<"input elapsed time in seconds :";
cin>>time;
cout<<endl;

hour=time/3600;
remainder=time-3600;
minute=remainder/60;
second=remainder%60;

cout<<"time in hours,minutes and seconds ::";
cout<<hour<<" :"<<minute<<" :"<<second<<":"<<endl;
}
